---
layout: empty
permalink: /daily.xml
---
<?xml version="1.0" encoding="UTF-8" ?>
{% assign contents_of_page = site.pages | where: "name", "daily.md" | first %}
{% assign pub_date = contents_of_page.date | date: "%Y-%m-%dT%H:%M:%SZ" %}
{% assign print_date = contents_of_page.date | date: "%Y-%m-%d" %}
<feed xmlns="http://www.w3.org/2005/Atom" xml:lang="en">
  <title>{{ site.owner.name }} - Daily Rundown</title>
  <subtitle>{{ site.description }}</subtitle>
  <link rel="self" type="application/atom+xml" href="{{ site.url }}/daily.xml" />
  <link rel="alternate" type="text/html" href="{{ site.url }}/daily" />
  <generator>Jekyll</generator>
  <rights>{{ site.owner.name }}</rights>
  <updated>{{ pub_date }}</updated>
  <author>
    <name>{{ site.owner.name }}</name>
    <email>{{ site.owner.email }}</email>
    <uri>{{ site.owner.uri }}/</uri>
  </author>
  <id>{{ site.url }}/daily</id>

  <entry>
    <title>Daily Rundown for {{ print_date }}</title>
    <link rel="alternate" href="{{ site.url }}/daily#{{ print_date }}" />
    <summary type="html"><![CDATA[ {{ contents_of_page.content }} ]]></summary>
    <author>
      <name>{{ site.owner.name }}</name>
      <uri>{{ site.url }}/daily#{{ print_date }}</uri>
    </author>
    <updated>{{ pub_date }}</updated>
    <id>{{ site.url }}/daily#{{ print_date }}</id>
  </entry>
</feed>
