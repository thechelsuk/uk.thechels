---
layout: empty
permalink: /films.xml
---
{% assign films_with_dates = site.data.films | where_exp: "film", "film.DateAdded != nil" | sort: "DateAdded" | reverse %}
{% assign recent_films = films_with_dates | slice: 0, 20 %}
{% assign pub_date = site.time | date: "%a, %d %b %Y %H:%M:%S %z" %}
{% assign print_date = site.time | date: "%Y-%m-%d" %}
{% assign build_time = site.time | date: "%Y%m%d%H%M%S" %}


<?xml version="1.0" encoding="UTF-8" ?>
<rss version="2.0">
  <channel>
    <title>{{ site.title }} - Recent Films</title>
    <link rel="self" type="application/atom+xml" href="{{ site.url }}/films.xml" />
    <link rel="alternate" type="text/html" href="{{ site.url }}/films" />
    <description>Recently added films to {{ site.title }}</description>
    <generator>Jekyll</generator>
    <language>en-gb</language>
    <copyright>{{ site.owner.name }}</copyright>
    <lastBuildDate>{{ pub_date }}</lastBuildDate>
    <ttl>60</ttl>
    <author>
      <name>{{ site.owner.name }}</name>
      <email>{{ site.owner.email }}</email>
      <uri>{{ site.owner.uri }}/</uri>
    </author>
    <id>{{ site.url }}/films</id>

    {% for film in recent_films %}
    <item>
      <title>{{ film.Title }} ({{ film.Year }}) - Rated {{ film.Rating }}/10</title>
      <link>{{ site.url }}/films#{{ film.Imdb }}</link>
      <description>
        <![CDATA[
        <h3>{{ film.Title }} ({{ film.Year }})</h3>
        <p><strong>Rated:</strong> {{ film.Rating }}/10</p>
        <p><strong>Added:</strong> {{ film.DateAdded | date: "%B %d, %Y at %I:%M %p" }}</p>
        <p><a href="https://www.imdb.com/title/{{ film.Imdb }}/" target="_blank">View on IMDb â†’</a></p>
        ]]>
      </description>
      <author>
        <name>{{ site.owner.name }}</name>
      </author>
      <pubDate>{{ film.DateAdded | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
      <guid isPermaLink="false">{{ site.url }}/films#{{ film.Imdb }}-{{ build_time }}</guid>
      <category>Film</category>
      <category>Rating: {{ film.Rating }}</category>
    </item>
    {% endfor %}

  </channel>
</rss>
