---
layout: empty
permalink: /feed.xml
---
{% assign pub_date = site.time | date: "%a, %d %b %Y %H:%M:%S %z" %}
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom" xml:lang="en">
<title type="html">{{ site.title }}</title>
<subtitle type="html">{{ site.description }}</subtitle>
<link rel="self" type="application/atom+xml" href="{{ site.url }}/feed.xml" />
<link rel="alternate" type="text/html" href="{{ site.url }}" />
<generator>Jekyll</generator>
<language>en-gb</language>
<copyright>{{ site.owner.name }}</copyright>
<lastBuildDate>{{ pub_date }}</lastBuildDate>
<ttl>60</ttl>
<author>
  <name>{{ site.owner.name }}</name>
  <email>{{ site.owner.email }}</email>
  <uri>{{ site.owner.uri }}/</uri>
</author>
<id>{{ site.url }}/</id>

{% for post in site.posts %}
<entry>
  <title type="html"><![CDATA[{{ post.title | cdata_escape }}]]></title>
 <link rel="alternate" type="text/html" href="{% if post.link %}{{ post.link }}{% else %}{{ site.url }}{{ post.url }}{% endif %}" />
  <id>{{ site.url }}{{ post.id }}</id>
  <published>{{ post.date | date_to_xmlschema }}</published>
  <author>
    <name>{% if post.cited %}Quoting {{ post.cited }}{% else %}{{ site.owner.name }}{% endif %}</name>
    <uri>{{ post.link | default: site.url | append: post.url }}</uri>
  </author>
  <link>{{ post.link | default: site.url | append: post.url }}</link>
  <content type="html">{{ post.content | xml_escape }}
  {% assign min = 1 %}
  {% assign max = site.data.offers.size %}
  {% assign diff = max | minus: min %}
  {% assign item = "now" | date: "%N" | modulo: diff | plus: min %}
  {% assign offer = site.data.offers[item] %}
  <![CDATA[<p> // Published {{ post.date | date: "%-d %B %Y" }}, with {{ post.content | number_of_words }} words.</p><hr/><p>Notes: Thanks for keeping RSS alive. If you have an RSS feed please send it my way.</p><p>Here is a special sponsor/advert link just for you; <a rel="sponsored" href="{{offer.link}}">{{offer.title}}</a> [T&Cs apply].</p>]]>
  </content>
</entry>
{% endfor %}

</feed>